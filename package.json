{
  "name": "GiveawayJoiner",
  "productName": "GiveawayJoiner",
  "version": "1.5.2d",
  "description": "Autojoin to steam game giveaways",
  "main": "giveawayjoiner.js",
  "dependencies": {
    "axios": "latest",
    "electron-json-storage": "latest"
  },
  "author": "pumPCin",
  "license": "MIT",
  "devDependencies": {
    "electron": "^11",
    "electron-builder": "^22"
  },
  "scripts": {
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.giveawayjoiner.app",
    "files": [
      "**/*",
      "!giveawayjoinerdata/*",
      "!.eslintrc",
      "!.jshintrc"
    ],
    "linux": {
      "target": "dir",
      "icon": "icons/icon.png"
    },
    "mac": {
      "target": "dir",
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "dir",
      "icon": "icons/icon.ico"
    }
  }
}
